{
  "name": "chicago-crime-ui",
  "description": "React + Leaflet UI for Chicago Crime Prediction API",
  "version": "0.1.0",
  "readme": "This config is for future React migration",
  
  "apiEndpoints": {
    "baseUrl": "http://localhost:8000",
    "health": "/health",
    "singlePrediction": "/api/v1/predictions/single",
    "hotspots": "/api/v1/predictions/hotspots",
    "grid": "/api/v1/predictions/grid",
    "modelInfo": "/api/v1/predictions/model-info"
  },

  "mapConfig": {
    "center": [41.8781, -87.6298],
    "zoom": 11,
    "bounds": {
      "north": 42.02,
      "south": 41.64,
      "east": -87.50,
      "west": -87.95
    },
    "tileLayer": {
      "url": "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png",
      "attribution": "© OpenStreetMap contributors, © CARTO"
    }
  },

  "heatmapConfig": {
    "radius": 25,
    "blur": 15,
    "maxZoom": 17,
    "gradient": {
      "0.0": "#00ff00",
      "0.25": "#80ff00",
      "0.5": "#ffff00", 
      "0.75": "#ff8000",
      "1.0": "#ff0000"
    }
  },

  "riskLevels": {
    "critical": { "color": "#8B0000", "threshold": 50 },
    "high": { "color": "#FF4500", "threshold": 30 },
    "medium": { "color": "#FFA500", "threshold": 15 },
    "low": { "color": "#228B22", "threshold": 0 }
  },

  "reactDependencies": {
    "react": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "leaflet": "^1.9.4",
    "leaflet.heat": "^0.2.0",
    "axios": "^1.6.0",
    "recharts": "^2.10.0",
    "tailwindcss": "^3.3.0"
  },

  "migrationNotes": [
    "api_client.py -> src/api/crimeApiClient.ts",
    "map_utils.py -> src/components/CrimeMap.tsx",
    "app.py views -> src/pages/*.tsx",
    "Use React Query for API state management",
    "Use react-leaflet with leaflet.heat plugin for heatmaps"
  ]
}
